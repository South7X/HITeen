<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:src="@drawable/sign_up"/>

    <TextView
        android:id="@+id/user_center_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="HITeen"
        android:textColor="@color/black"
        android:textSize="18sp" />
<!--        android:text="Hello World"-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_change"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="15dp"
                android:drawableRight="@drawable/grey_bold_right_arrow"
                android:gravity="fill"
                android:paddingLeft="20dip"
                android:text="修改个人信息"
                android:textSize="20sp" />
            <View
                android:layout_marginStart="60dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E2E2E2" />

            <Button
                android:id="@+id/button_stastic"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/stastic"
                android:drawablePadding="15dp"
                android:drawableRight="@drawable/grey_bold_right_arrow"
                android:gravity="fill"
                android:paddingLeft="20dip"
                android:text="统计"
                android:textSize="20sp" />
            <View
                android:layout_marginStart="60dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E2E2E2" />

            <Button
                android:id="@+id/button_recent_visit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/recent_visit"
                android:drawablePadding="15dp"
                android:drawableRight="@drawable/grey_bold_right_arrow"
                android:gravity="fill"
                android:paddingLeft="20dip"
                android:text="最近浏览"
                android:textSize="20sp" />
            <View
                android:layout_marginStart="60dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E2E2E2" />

            <Button
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/about"
                android:drawablePadding="15dp"
                android:drawableRight="@drawable/grey_bold_right_arrow"
                android:gravity="fill"
                android:paddingLeft="20dip"
                android:text="关于"
                android:textSize="20sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
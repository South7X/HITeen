<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/manager_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_feedback"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/feedback_icon"
                android:drawablePadding="15dp"
                android:drawableRight="@drawable/grey_bold_right_arrow"
                android:gravity="fill"
                android:paddingLeft="20dip"
                android:text="反馈信息"
                android:textSize="20sp" />

            <View
                android:layout_marginStart="60dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E2E2E2" />

            <Button
                android:text="订单信息"
                android:id="@+id/button_order"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/order_icon"
                android:drawablePadding="15dp"
                android:drawableRight="@drawable/grey_bold_right_arrow"
                android:gravity="fill"
                android:paddingLeft="20dip"
                android:textSize="20sp" />
            <View
                android:layout_marginStart="60dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E2E2E2" />

            <Button
                android:text="推广信息"
                android:id="@+id/button_advertiseview"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/promote"
                android:drawablePadding="15dp"
                android:drawableRight="@drawable/grey_bold_right_arrow"
                android:gravity="fill"
                android:paddingLeft="20dip"
                android:textSize="20sp" />
            <View
                android:layout_marginStart="60dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E2E2E2" />

            <Button
                android:text="修改食堂信息"
                android:id="@+id/button_edit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:drawableLeft="@drawable/manage_canteen"
                android:drawablePadding="15dp"
                android:drawableRight="@drawable/grey_bold_right_arrow"
                android:gravity="fill"
                android:paddingLeft="20dip"
                android:textSize="20sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/ima_background"
        android:background="@drawable/manager_backgroun"
        android:layout_width="400dp"
        android:layout_height="215dp"
        android:layout_marginTop="300dp"/>

</LinearLayout>
